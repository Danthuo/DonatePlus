<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donate Form"
        android:textSize="35sp"
        android:textColor="@color/blueD_1"
        android:fontFamily="@font/aileron_ultra_light"
        android:paddingLeft="20sp"
        android:paddingTop="10sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Children's Home"
        android:textSize="15sp"
        android:textColor="@color/greyD0"
        android:fontFamily="@font/aileron_light"
        android:paddingLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp" />
    <Spinner
        android:id="@+id/txt_Form_Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/home_prompt"
        android:entries="@array/home_array"
        android:spinnerMode="dialog"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/aileron_light"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:background="@color/blueD1" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type of Donation"
        android:textSize="15sp"
        android:textColor="@color/greyD0"
        android:fontFamily="@font/aileron_light"
        android:paddingLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"/>
    <Spinner
        android:id="@+id/txt_Form_Type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:entries="@array/type_array"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/aileron_light"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:background="@color/blueD1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donation Amount"
        android:textSize="15sp"
        android:textColor="@color/greyD0"
        android:fontFamily="@font/aileron_light"
        android:paddingLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"/>
    <EditText
        android:id="@+id/txt_Form_Amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/aileron_light"
        android:inputType="number"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:background="@color/blueD1" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drop-off Location"
        android:textSize="15sp"
        android:textColor="@color/greyD0"
        android:fontFamily="@font/aileron_light"
        android:paddingLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"/>
    <TextView
        android:id="@+id/txt_Form_DropOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/aileron_light"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:background="@color/blueD1" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_Form_MD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make Donation"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/aileron_bold"
            android:background="@color/blueD0"
            android:padding="10sp"/>

        <Button
            android:id="@+id/btn_Form_Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/aileron_bold"
            android:background="@color/blueD0"
            android:padding="10sp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>

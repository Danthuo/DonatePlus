<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/Sign_up_logo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/donate_plus_logo"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/Sign_up_tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/DP_Tagline_Text"
        android:textColor="@color/blueD1"
        android:textSize="15dp"
        android:fontFamily="@font/aileron_light"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_below="@id/Sign_up_logo" />

    <TextView
        android:id="@+id/Sign_up_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/blueD1"
        android:textSize="40dp"
        android:fontFamily="@font/aileron_ultra_light"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:layout_below="@id/Sign_up_tagline" />



    <EditText
        android:id="@+id/Register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textColorHint="@color/hint_white"
        android:textSize="@dimen/regular_font_size"
        android:fontFamily="@font/aileron_light"
        android:inputType="textWebEmailAddress"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@color/blueD1"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/Sign_up_title" />

    <EditText
        android:id="@+id/Register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="@color/hint_white"
        android:textSize="@dimen/regular_font_size"
        android:fontFamily="@font/aileron_light"
        android:inputType="textWebPassword"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@color/blueD2"
        android:padding="15dp"
        android:layout_below="@id/Register_email" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="@dimen/regular_font_size"
        android:textColor="@color/white"
        android:fontFamily="@font/aileron_bold"
        android:background="@color/blueD3"
        android:layout_margin="0dp"
        android:layout_below="@id/Register_password"
        style="?android:attr/borderlessButtonStyle" />

    <TextView
        android:id="@+id/textViewSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRegister"
        android:text="Already Registered? Log in here"
        android:gravity="center_horizontal"
        android:textSize="@dimen/regular_font_size"
        android:textColor="@color/blueD1"
        android:fontFamily="@font/aileron_light"
        android:layout_marginTop="20dp"/>

</RelativeLayout>